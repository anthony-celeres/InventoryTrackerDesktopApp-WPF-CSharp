<Window x:Class="UIDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIDesign"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Celeres Store Inventory"
           Grid.Row="0" Grid.Column="0"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           FontFamily="Calibri"
           FontSize="24"
           FontWeight="Bold"
           Foreground="DarkSlateBlue"/>

        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="160" />
                <RowDefinition Height="190" />
            </Grid.RowDefinitions>
            <TextBlock Text="Add New Product"
                        Grid.Row="0" Grid.Column="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="Calibri"
                        FontSize="18"
                        FontWeight="Bold"
            Foreground="DarkSlateBlue"/>
            <StackPanel x:Name="ProductDescriptionPanel" Grid.Row="1" >
                <TextBlock Text="Product Name" />
                <TextBox x:Name="NameBox" Height="25"/>
                <TextBlock Text="Product ID" />
                <TextBox x:Name="IDBox" Height="25"/>
                <TextBlock Text="Quantity" />
                <TextBox x:Name="QuantityBox" Height="25"/>
                <Button x:Name="AddButton" Content="Add" Margin="0,5,0,0" Height="25" Width="100" Background="LightGreen" Click="AddButton_Click"/>
            </StackPanel>

            <Grid x:Name="StockPanel" Grid.Row="2" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Product Stock Update"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
               Margin="0,30,0,10"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontFamily="Calibri"
               FontSize="18"
               FontWeight="Bold"
               Foreground="DarkSlateBlue"/>

                <TextBlock Text="Add" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="AddStockBox" Grid.Row="2" Grid.Column="0" Height="25"  Margin="1"/>

                <TextBlock Text="Remove" Grid.Row="1" Grid.Column="1"  VerticalAlignment="Center"/>
                <TextBox x:Name="RemoveStockBox" Grid.Row="2" Grid.Column="1" Height="25"  Margin="1"/>

                <TextBlock Text="Edit Stock" Grid.Row="1" Grid.Column="2"  VerticalAlignment="Center"/>
                <TextBox x:Name="EditStockBox" Grid.Row="2" Grid.Column="2" Height="25"  Margin="1"/>

                <Button x:Name="UpdateButton"
        Content="Update"
        Grid.Row="4"
        Grid.Column="0"
                        Grid.ColumnSpan="3"
        Margin="2"
        Height="25" Width="100"
        HorizontalAlignment="Center"
        Click="UpdateButton_Click"
                        Background="LightBlue"/>

            </Grid>

        </Grid>
        <DataGrid x:Name="ProductGrid"
                  AutoGenerateColumns="False"
                  RowStyle="{StaticResource LowStockRowStyle}"
                  ItemsSource="{Binding Products}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="5"
                  Grid.Row="1"
                  Grid.Column="0"
                  SelectionChanged="ProductGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ID}" Width="*"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Quantity}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="RemoveProduct"
        Content="Remove Product"
        Grid.Row="2"
        Height="25"
        Width="150"
                Background="Tomato"
                Foreground="White"
        Click="RemoveProduct_Click" Margin="225,5,225,10"/>

    </Grid>
</Window>
