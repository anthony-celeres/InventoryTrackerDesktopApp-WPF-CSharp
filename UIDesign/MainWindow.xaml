<Window x:Class="UIDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIDesign"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800" Background="#1d1d1d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="ViewProductGrid" Grid.Row="1" Margin="0,10,0,10" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="ViewProductBorder" BorderBrush="#BABABA" BorderThickness="0.5" Grid.Row="1" Margin="10,0,0,0" Grid.ColumnSpan="2" Height="100" CornerRadius="5" Visibility="Visible"/>
            <TextBox x:Name="ProductDescription" Grid.Row="0" VerticalAlignment="Center" Grid.Column="0" Foreground="#BABABA" Margin="15,0,0,0" Height="85" Background="#1d1d1d" BorderThickness="0" Visibility="Visible" />
            <TextBox x:Name="ProductStatistics" Grid.Row="0" VerticalAlignment="Center" Grid.Column="1" Foreground="#BABABA" Margin="5,0,5,0" Height="85" Background="#1d1d1d" BorderThickness="0" Visibility="Visible"/>

            <Grid x:Name="ProductModifierButtons" Grid.Column="2" VerticalAlignment="Center" Visibility="Visible">
                <StackPanel Margin="-25,0,0,0">
                    <Button x:Name="UpdateProductStock"
                        Content="Update Stock"
                        Grid.Row="0"
                        Height="25"
                        Width="150"
                        Margin="0,0,0,5"
                        Background="LightGreen"
                        Foreground="Black"
                        Click="RemoveProduct_Click" 
                        HorizontalAlignment="Center" />

                    <Button x:Name="EditProductDescription"
                        Content="Edit Description"
                        Grid.Row="1"
                        Height="25"
                        Width="150"
                        Margin="0,5,0,5"
                        Background="LightGreen"
                        Foreground="Black"
                        Click="RemoveProduct_Click" 
                        HorizontalAlignment="Center"/>

                    <Button x:Name="RemoveProduct"
                        Content="Remove Product"
                        Grid.Row="2"
                        Height="25"
                        Width="150"
                        Margin="0,5,0,0"
                        Background="Tomato"
                        Foreground="White"
                        Click="RemoveProduct_Click" 
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Border x:Name="AddProductBorder" BorderBrush="#BABABA" BorderThickness="0.5" Grid.Column="3" Margin="-25,0,10,0" CornerRadius="5" Visibility="Collapsed"/>
        </Grid>
        
        <TextBlock Text="Store Inventory Tracker"
           Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           FontFamily="Calibri"
           FontSize="24"
           FontWeight="Bold"
           Foreground="#4681a8"/>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="   Search by:"  Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#BABABA"/>
            <ComboBox x:Name="SizeComboBox" Grid.Column="1" Margin="0,0,5,0">
                <ComboBoxItem Content="ID"/>
                <ComboBoxItem Content="Name"/>
            </ComboBox>
            <TextBox x:Name="SearchBox" Grid.Column="2" Margin="5,0,0,0"/>
            <Button x:Name="SearchButton" Grid.Column="3" Content="Search" Margin="5,0,5,0"/>

            <Button x:Name="AddProductExpander" Content="Add New" Grid.Column="4" Click="OpenAddProductWindow_Click" Margin="0,0,5,0"/>
        </Grid>

        <DataGrid x:Name="ProductGrid"
                  AutoGenerateColumns="False"
       
                  ItemsSource="{Binding Products}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  Margin="5"
                  Grid.Row="3"
                  Grid.ColumnSpan="1"
                  MouseLeftButtonUp="ProductGrid_MouseLeftButtonUp">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding ID}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <StaticResource ResourceKey="StatusCellStyle"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
            </DataGrid>

        </Grid>
</Window>