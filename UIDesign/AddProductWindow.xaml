<Window x:Class="UIDesign.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product"
        Height="420"
        Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        BorderThickness="1">

    <Border Margin="0"
            Background="#1D1D1D"
            CornerRadius="12"
            Padding="5"
            BorderBrush="#BABABA"
            BorderThickness="1">
        <StackPanel VerticalAlignment="Center" Height="398">

            <!-- Title -->
            <Button x:Name="ExcapeButton"
                Content="❌"
                HorizontalAlignment="Right"
                Width="20"
                Height="20"
                Style="{StaticResource RoundedEscapeButton}"
                Click="EscapeButton_Click"/>
            <TextBlock Text="Add New Product"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"
                       Foreground="#4681a8"/>

            <TextBlock Text="Name:"
                       Foreground="#FAFAFA"
                       Margin="20,5,0,0"/>
            <TextBox x:Name="NameBox" Style="{StaticResource RoundedTextBox}" Margin="20,0,20,0"/>
            <TextBlock Text="ID:"
                       Foreground="#FAFAFA"
                       Margin="20,5,0,0"/>
            <TextBox x:Name="IDBox" Style="{StaticResource RoundedTextBox}" Margin="20,0,20,0"/>
            <TextBlock Text="Quantity:"
                       Foreground="#FAFAFA"
                       Margin="20,5,0,0"/>
            <TextBox x:Name="QuantityBox" Style="{StaticResource RoundedTextBox}" Margin="20,0,20,0"/>
            <TextBlock Text="Price:"
                       Foreground="#FAFAFA"
                       Margin="20,5,0,0"/>
            <TextBox x:Name="PriceBox" Style="{StaticResource RoundedTextBox}" Margin="20,0,20,0"/>

            <!-- New Category Field -->
            <TextBlock Text="Category:"
                       Foreground="#FAFAFA"
                       Margin="20,5,0,0"/>
            <ComboBox x:Name="CategoryBox"
                      Margin="20,0,20,0"
                      Height="25"
                      Style="{StaticResource RoundedComboBox}" 
                      Foreground="Black"
                      DisplayMemberPath="." />

            <!-- Buttons -->
            <Button x:Name="AddButton"
                Content="➕ Add Product"
                Margin="0,20,0,10"
                Width="140"
                Height="35"
                Style="{StaticResource RoundedAddButton}"
                Click="AddButton_Click"/>
            <Button x:Name="ExitButton"
                Content="Exit"
                Width="140"
                Height="35"
                Style="{StaticResource RoundedExitButton}"
                Click="ExitButton_Click"/>
        </StackPanel>

    </Border>
</Window>
