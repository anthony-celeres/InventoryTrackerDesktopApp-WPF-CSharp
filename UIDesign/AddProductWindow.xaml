<Window x:Class="UIDesign.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIDesign"
        mc:Ignorable="d"
        Title="Add Product"
        Height="400"
        Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    <!-- Keep default window chrome -->

    <!-- Add shadow to content only -->
    <Border Margin="10"
            Background="White"
            CornerRadius="10"
            Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Opacity="0.3"
                              BlurRadius="10"
                              ShadowDepth="5"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock Text="Product Name" Foreground="#BABABA"/>
            <TextBox x:Name="NameBox" Height="25" VerticalContentAlignment="Center"/>

            <TextBlock Text="Product ID" Foreground="#BABABA"/>
            <TextBox x:Name="IDBox" Height="25" VerticalContentAlignment="Center" />

            <TextBlock Text="Quantity" Foreground="#BABABA"/>
            <TextBox x:Name="QuantityBox" Height="25" VerticalContentAlignment="Center"/>

            <TextBlock Text="Price" Foreground="#BABABA"/>
            <TextBox x:Name="PriceBox" Height="25" VerticalContentAlignment="Center"/>

            <Button x:Name="AddButton"
                    Content="Add"
                    Margin="0,10,0,0"
                    Height="25"
                    Width="110"
                    HorizontalAlignment="Left"
                    Background="LightGreen"
                    Click="AddButton_Click"/>
        </StackPanel>
    </Border>
</Window>
