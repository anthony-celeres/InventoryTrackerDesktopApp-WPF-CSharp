<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UIDesign">

    <local:QuantityToBrushConverter x:Key="QuantityToBrushConverter"/>

    <!-- Style for only the Status column cell -->
    <Style x:Key="StatusCellStyle" TargetType="TextBlock">
        <Setter Property="Background" 
                Value="{Binding Quantity, Converter={StaticResource QuantityToBrushConverter}}"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

</ResourceDictionary>
